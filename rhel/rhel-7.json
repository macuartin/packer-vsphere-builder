{
  "variables": {
    "vsphere_username": "",
    "vsphere_password": "",
    "vm_template": "",
    "vm_name": ""
  },
  "builders": [
    {
      "type": "vsphere-clone",

      "convert_to_template": "true",
      "username":            "{{user `vsphere_username`}}",
      "password":            "{{user `vsphere_password`}}",
      "ssh_username": "terraform",
      "insecure_connection": "true",
      "template": "{{user `vm_template`}}",
      "vm_name":  "{{user `vm_name`}}-{{timestamp}}",

      "vcenter_server": "",
      "cluster": "",
      "host":     "",
      "datacenter": "",
      "resource_pool": "",
      "datastore": "",
      "communicator": "ssh"
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "playbook_file": "./playbooks/cis-amzn.yml",
      "extra_arguments": [
        "--skip-tags=debug,test"
      ]
    }
  ]
}
